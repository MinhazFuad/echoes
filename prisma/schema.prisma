generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  avatarColor String
  avatarShape String
  createdAt   DateTime @default(now())
  posts       Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  url       String   @db.LongText // Using LongText for Base64 storage
  emotion   String   @default("laugh") // Default emotion since user doesn't select it
  isPublic  Boolean  @default(true)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}